                  "    pm.test('Project response includes statuses', function () {",
                  "      pm.expect(Array.isArray(data.statuses), 'statuses array').to.be.true;",
                  "      pm.expect(data.statuses).to.eql(expectedStatuses);",
                  "    });",
                  "  } catch (err) {",
                  "    console.warn('Failed to parse get project response', err);",
                  "    throw err;",
                  "  }",
